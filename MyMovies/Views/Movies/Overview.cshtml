@model List<MyMovies.Data.Movie>;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{ 
    Layout = "_Layout";
    ViewBag.Title = "Home";
}

<div class="row">
    <form asp-controller="Movies" asp-action="Overview" class="form-inline">
        <div class="form-group">
            <input name="Title" value="" id="title" class="form-control" placeholder="Search" />
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </form>
</div>
    
 <div class="container" style="margin-top:20px">
        <div class="row">
            @foreach (var movie in @Model)
            {
                <div class="col-md-4">
                    <div class="card">
                        <img src="@movie.ImageUrl" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title</h5>
                            <p class="card-text">@movie.Description.</p>
                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                </div>
            }
        </div>
 </div>
    
