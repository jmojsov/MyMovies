@model MyMovies.ViewModels.MovieOverviewDataModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{ 
    Layout = "_Layout";
    ViewBag.Title = "Home";
}

<div class="row">
    <form asp-controller="Movies" asp-action="Overview" class="form-inline">
        <div class="form-group">
            <input name="Title" value="" id="title" class="form-control" placeholder="Search" />
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </form>
</div>
 
@if (@Model.Movies.Count == 0)
{
    <p>No results found</p>
}

<div class="row">
    <div class="col-md-9">
        <div class="row">
            @foreach (var movie in @Model.Movies)
            {
            <div class="col-md-4">
                <div class="card">
                    <img src="@movie.ImageUrl" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">@movie.Description.</p>
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">Go</a>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
    <div class="col-md-3">
        <partial name="SidebarPartial" for="SiedbarData" />
    </div>
</div>
 
            
   
